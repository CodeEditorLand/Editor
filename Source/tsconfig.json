{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./",
		"outDir": "Target",
		"plugins": [
			{
				"exemptionConfig": "./tsec.exemptions.json",
				"name": "tsec"
			}
		],
		"preserveConstEnums": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"rootDir": "Source",
		"sourceMap": false,
		"types": [
			"mocha",
			"semver",
			"sinon",
			"winreg",
			"trusted-types",
			"wicg-file-system-access"
		]
	},
	"extends": "@playform/build/tsconfig",
	"include": [
		"Source"
	]
}
