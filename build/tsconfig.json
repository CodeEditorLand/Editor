{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["ES2020"],
		"module": "commonjs",
		"alwaysStrict": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": true,
		"exactOptionalPropertyTypes": false,
		"useUnknownInCatchVariables": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"newLine": "lf",
		"noEmit": true
	},
	"include": ["**/*.ts", "**/*.js"],
	"exclude": ["node_modules/**"]
}
