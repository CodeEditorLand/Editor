{
	"name": "cpp",
	"displayName": "%displayName%",
	"version": "0.0.1",
	"private": false,
	"description": "%description%",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@playform.cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"scripts": {
		"prepublishOnly": "Build 'Source/**/*.ts'",
		"update-grammar": "node ./build/update-grammars.js"
	},
	"contributes": {
		"grammars": [
			{
				"language": "c",
				"path": "./syntaxes/c.tmLanguage.json",
				"scopeName": "source.c"
			},
			{
				"language": "cpp",
				"path": "./syntaxes/cpp.embedded.macro.tmLanguage.json",
				"scopeName": "source.cpp.embedded.macro"
			},
			{
				"language": "cpp",
				"path": "./syntaxes/cpp.tmLanguage.json",
				"scopeName": "source.cpp"
			},
			{
				"path": "./syntaxes/platform.tmLanguage.json",
				"scopeName": "source.c.platform"
			},
			{
				"language": "cuda-cpp",
				"path": "./syntaxes/cuda-cpp.tmLanguage.json",
				"scopeName": "source.cuda-cpp"
			}
		],
		"languages": [
			{
				"aliases": [
					"C",
					"c"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".c",
					".i"
				],
				"id": "c"
			},
			{
				"aliases": [
					"C++",
					"Cpp",
					"cpp"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".cpp",
					".cc",
					".cxx",
					".c++",
					".hpp",
					".hh",
					".hxx",
					".h++",
					".h",
					".ii",
					".ino",
					".inl",
					".ipp",
					".ixx",
					".tpp",
					".txx",
					".hpp.in",
					".h.in"
				],
				"id": "cpp"
			},
			{
				"aliases": [
					"CUDA C++"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".cu",
					".cuh"
				],
				"id": "cuda-cpp"
			}
		],
		"problemMatchers": [
			{
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"name": "nvcc",
				"owner": "cuda-cpp",
				"pattern": "$nvcc-location"
			}
		],
		"problemPatterns": [
			{
				"file": 1,
				"kind": "location",
				"location": 2,
				"message": 4,
				"name": "nvcc-location",
				"regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error):\\s+(.*)",
				"severity": 3
			}
		],
		"snippets": [
			{
				"language": "c",
				"path": "./snippets/c.code-snippets"
			},
			{
				"language": "cpp",
				"path": "./snippets/cpp.code-snippets"
			}
		]
	},
	"devDependencies": {
		"@playform/build": "0.0.2"
	},
	"optionalDependencies": {
		"@playform/document": "0.0.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
