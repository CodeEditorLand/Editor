{
	"name": "git-base",
	"displayName": "%displayName%",
	"version": "0.0.1",
	"private": false,
	"description": "%description%",
	"homepage": "https://github.com/CodeEditorLand/Foundation#ReadMe",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@playform.cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension.js",
	"browser": "./dist/browser/extension.js",
	"scripts": {
		"compile": "gulp compile-extension:git-base",
		"Build": "Build 'Source/**/*.ts'",
		"update-grammar": "node ./build/update-grammars.js"
	},
	"contributes": {
		"commands": [
			{
				"category": "Git Base API",
				"command": "git-base.api.getRemoteSources",
				"title": "%command.api.getRemoteSources%"
			}
		],
		"grammars": [
			{
				"language": "git-commit",
				"path": "./syntaxes/git-commit.tmLanguage.json",
				"scopeName": "text.git-commit"
			},
			{
				"language": "git-rebase",
				"path": "./syntaxes/git-rebase.tmLanguage.json",
				"scopeName": "text.git-rebase"
			},
			{
				"language": "ignore",
				"path": "./syntaxes/ignore.tmLanguage.json",
				"scopeName": "source.ignore"
			}
		],
		"languages": [
			{
				"aliases": [
					"Git Commit Message",
					"git-commit"
				],
				"configuration": "./languages/git-commit.language-configuration.json",
				"filenames": [
					"COMMIT_EDITMSG",
					"MERGE_MSG"
				],
				"id": "git-commit"
			},
			{
				"aliases": [
					"Git Rebase Message",
					"git-rebase"
				],
				"configuration": "./languages/git-rebase.language-configuration.json",
				"filenamePatterns": [
					"**/rebase-merge/done"
				],
				"filenames": [
					"git-rebase-todo"
				],
				"id": "git-rebase"
			},
			{
				"aliases": [
					"Ignore",
					"ignore"
				],
				"configuration": "./languages/ignore.language-configuration.json",
				"extensions": [
					".gitignore_global",
					".gitignore",
					".git-blame-ignore-revs"
				],
				"id": "ignore"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "git-base.api.getRemoteSources",
					"when": "false"
				}
			]
		}
	},
	"activationEvents": [
		"*"
	],
	"devDependencies": {
		"@playform/build": "0.0.2",
		"@types/node": "20.x"
	},
	"optionalDependencies": {
		"@playform/document": "0.0.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "resources/icons/git.png",
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		},
		"virtualWorkspaces": true
	}
}
