{
	"name": "grunt",
	"displayName": "Grunt support for VS Code",
	"version": "0.0.1",
	"private": false,
	"description": "Extension to add Grunt capabilities to VS Code.",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "hello@playform.cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/main",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"compile": "gulp compile-extension:grunt",
		"prepublishOnly": "Build 'Source/**/*.ts'"
	},
	"contributes": {
		"configuration": {
			"id": "grunt",
			"properties": {
				"grunt.autoDetect": {
					"default": "off",
					"description": "%config.grunt.autoDetect%",
					"enum": [
						"off",
						"on"
					],
					"scope": "application",
					"type": "string"
				}
			},
			"title": "Grunt",
			"type": "object"
		},
		"taskDefinitions": [
			{
				"properties": {
					"args": {
						"description": "%grunt.taskDefinition.args.description%",
						"type": "array"
					},
					"file": {
						"description": "%grunt.taskDefinition.file.description%",
						"type": "string"
					},
					"task": {
						"description": "%grunt.taskDefinition.type.description%",
						"type": "string"
					}
				},
				"required": [
					"task"
				],
				"type": "grunt",
				"when": "shellExecutionSupported"
			}
		]
	},
	"activationEvents": [
		"onTaskType:grunt"
	],
	"devDependencies": {
		"@playform/build": "0.0.5",
		"@playform/document": "0.0.6",
		"@types/node": "20.x"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "images/grunt.png",
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		},
		"virtualWorkspaces": false
	}
}
