{
	"name": "gulp",
	"displayName": "%displayName%",
	"version": "0.0.1",
	"private": false,
	"description": "%description%",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+HTTPS://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Land",
		"email": "Land@Playform.Cloud",
		"url": "HTTPS://Land.Playform.Cloud"
	},
	"type": "module",
	"main": "./out/main",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"compile": "gulp compile-extension:gulp",
		"prepublishOnly": "Build 'Source/**/*.ts'"
	},
	"contributes": {
		"configuration": {
			"id": "gulp",
			"properties": {
				"gulp.autoDetect": {
					"default": "off",
					"description": "%config.gulp.autoDetect%",
					"enum": [
						"off",
						"on"
					],
					"scope": "application",
					"type": "string"
				}
			},
			"title": "Gulp",
			"type": "object"
		},
		"taskDefinitions": [
			{
				"properties": {
					"file": {
						"description": "%gulp.taskDefinition.file.description%",
						"type": "string"
					},
					"task": {
						"description": "%gulp.taskDefinition.type.description%",
						"type": "string"
					}
				},
				"required": [
					"task"
				],
				"type": "gulp",
				"when": "shellExecutionSupported"
			}
		]
	},
	"activationEvents": [
		"onTaskType:gulp"
	],
	"dependencies": {},
	"devDependencies": {
		"@playform/build": "0.0.5",
		"@playform/document": "0.0.6",
		"@types/node": "18.x"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "images/gulp.png",
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		},
		"virtualWorkspaces": false
	}
}
