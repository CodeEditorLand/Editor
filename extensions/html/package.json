{
	"name": "html",
	"displayName": "%displayName%",
	"version": "0.0.1",
	"private": false,
	"description": "%description%",
	"homepage": "https://github.com/CodeEditorLand/Foundation#ReadMe",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@playform.cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"scripts": {
		"prepublishOnly": "Build 'Source/**/*.ts'",
		"update-grammar": "node ./build/update-grammar.mjs"
	},
	"contributes": {
		"grammars": [
			{
				"embeddedLanguages": {
					"source.css": "css",
					"source.js": "javascript",
					"source.python": "python",
					"source.smarty": "smarty",
					"text.html": "html"
				},
				"path": "./syntaxes/html.tmLanguage.json",
				"scopeName": "text.html.basic",
				"tokenTypes": {
					"meta.tag string.quoted": "other"
				}
			},
			{
				"embeddedLanguages": {
					"source.css": "css",
					"source.js": "javascript",
					"source.python": "python",
					"source.smarty": "smarty",
					"text.html": "html"
				},
				"language": "html",
				"path": "./syntaxes/html-derivative.tmLanguage.json",
				"scopeName": "text.html.derivative",
				"tokenTypes": {
					"meta.tag string.quoted": "other"
				}
			}
		],
		"languages": [
			{
				"aliases": [
					"HTML",
					"htm",
					"html",
					"xhtml"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".html",
					".htm",
					".shtml",
					".xhtml",
					".xht",
					".mdoc",
					".jsp",
					".asp",
					".aspx",
					".jshtm",
					".volt",
					".ejs",
					".rhtml"
				],
				"id": "html",
				"mimetypes": [
					"text/html",
					"text/x-jshtm",
					"text/template",
					"text/ng-template",
					"application/xhtml+xml"
				]
			}
		],
		"snippets": [
			{
				"language": "html",
				"path": "./snippets/html.code-snippets"
			}
		]
	},
	"devDependencies": {
		"@playform/build": "0.0.2"
	},
	"optionalDependencies": {
		"@playform/document": "0.0.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
