{
	"name": "jake",
	"displayName": "%displayName%",
	"description": "%description%",
	"main": "./out/main",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"compile": "gulp compile-extension:jake",
		"prepublishOnly": "Build 'Source/**/*.ts'"
	},
	"contributes": {
		"configuration": {
			"id": "jake",
			"properties": {
				"jake.autoDetect": {
					"default": "off",
					"description": "%config.jake.autoDetect%",
					"enum": [
						"off",
						"on"
					],
					"scope": "application",
					"type": "string"
				}
			},
			"title": "Jake",
			"type": "object"
		},
		"taskDefinitions": [
			{
				"properties": {
					"file": {
						"description": "%jake.taskDefinition.file.description%",
						"type": "string"
					},
					"task": {
						"description": "%jake.taskDefinition.type.description%",
						"type": "string"
					}
				},
				"required": [
					"task"
				],
				"type": "jake",
				"when": "shellExecutionSupported"
			}
		]
	},
	"activationEvents": [
		"onTaskType:jake"
	],
	"dependencies": {},
	"devDependencies": {
		"@playform/build": "0.0.7",
		"@types/node": "20.x"
	},
	"icon": "images/cowboy_hat.png",
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		},
		"virtualWorkspaces": false
	}
}
