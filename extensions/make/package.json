{
  "name": "make",
  "displayName": "%displayName%",
  "version": "0.0.1",
  "description": "%description%",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeEditorLand/CodeEditorLand.git"
  },
  "license": "MIT",
  "publisher": "playform",
  "scripts": {
    "update-grammar": "node ../node_modules/vscode-grammar-updater/bin fadeevab/make.tmbundle Syntaxes/Makefile.plist ./syntaxes/make.tmLanguage.json",
    "prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'"
  },
  "contributes": {
    "configurationDefaults": {
      "[makefile]": {
        "editor.insertSpaces": false
      }
    },
    "grammars": [
      {
        "language": "makefile",
        "scopeName": "source.makefile",
        "path": "./syntaxes/make.tmLanguage.json",
        "tokenTypes": {
          "string.interpolated": "other"
        }
      }
    ],
    "languages": [
      {
        "id": "makefile",
        "aliases": [
          "Makefile",
          "makefile"
        ],
        "extensions": [
          ".mak",
          ".mk"
        ],
        "filenames": [
          "Makefile",
          "makefile",
          "GNUmakefile",
          "OCamlMakefile"
        ],
        "firstLine": "^#!\\s*/usr/bin/make",
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "homepage": "https://github.com/CodeEditorLand/CodeEditorLand#readme",
  "bugs": {
    "url": "https://github.com/CodeEditorLand/CodeEditorLand/issues"
  },
  "type": "module",
  "private": "false",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Nikola Hristov",
    "email": "nikola@nikolahristov.tech",
    "url": "https://nikolahristov.tech"
  },
  "devDependencies": {
    "typescript-esbuild": "0.3.1"
  }
}
