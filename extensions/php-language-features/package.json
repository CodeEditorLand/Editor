{
	"name": "php-language-features",
	"displayName": "%displayName%",
	"version": "0.0.1",
	"private": false,
	"description": "%description%",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/phpMain",
	"scripts": {
		"compile": "npx gulp compile-extension:php-language-features",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"watch": "npx gulp watch-extension:php-language-features"
	},
	"contributes": {
		"configuration": {
			"order": 20,
			"properties": {
				"php.suggest.basic": {
					"default": true,
					"description": "%configuration.suggest.basic%",
					"type": "boolean"
				},
				"php.validate.enable": {
					"default": true,
					"description": "%configuration.validate.enable%",
					"type": "boolean"
				},
				"php.validate.executablePath": {
					"default": null,
					"description": "%configuration.validate.executablePath%",
					"scope": "machine-overridable",
					"type": [
						"string",
						"null"
					]
				},
				"php.validate.run": {
					"default": "onSave",
					"description": "%configuration.validate.run%",
					"enum": [
						"onSave",
						"onType"
					],
					"type": "string"
				}
			},
			"title": "%configuration.title%",
			"type": "object"
		},
		"jsonValidation": [
			{
				"fileMatch": "composer.json",
				"url": "https://getcomposer.org/schema.json"
			}
		]
	},
	"activationEvents": [
		"onLanguage:php"
	],
	"dependencies": {
		"which": "^2.0.2"
	},
	"devDependencies": {
		"@types/node": "18.x",
		"@types/which": "^2.0.0",
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "icons/logo.png",
	"capabilities": {
		"untrustedWorkspaces": {
			"description": "%workspaceTrust%",
			"restrictedConfigurations": [
				"php.validate.executablePath"
			],
			"supported": "limited"
		},
		"virtualWorkspaces": false
	}
}
