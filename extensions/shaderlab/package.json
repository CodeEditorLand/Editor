{
	"name": "shaderlab",
	"displayName": "%displayName%",
	"version": "0.0.1",
	"private": false,
	"description": "%description%",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@playform.cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"scripts": {
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"update-grammar": "node ../node_modules/vscode-grammar-updater/bin tgjones/shaders-tmLanguage grammars/shaderlab.json ./syntaxes/shaderlab.tmLanguage.json"
	},
	"contributes": {
		"grammars": [
			{
				"language": "shaderlab",
				"path": "./syntaxes/shaderlab.tmLanguage.json",
				"scopeName": "source.shaderlab"
			}
		],
		"languages": [
			{
				"aliases": [
					"ShaderLab",
					"shaderlab"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".shader"
				],
				"id": "shaderlab"
			}
		]
	},
	"devDependencies": {
		"@playform/build": "0.0.1"
	},
	"optionalDependencies": {
		"@playform/document": "0.0.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
